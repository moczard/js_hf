<%- include('header') %>

	<body>
		<div class="wrapper">
			<div class="index-wrapper">
				<%- include('searcharea') %>
				<div class="subtitle">Newest recipes</div>
				<div class="row">
					<% recipes.forEach(function (item){ %>
						<%- include('recipecard',{item : item}) %>
					<% }); %>
				</div>

				<div class="subtitle">Best rated recipes</div>
				<div class="row">
					<% bestRecipes.forEach(function (item){ %>
						<%- include('recipecard',{item : item}) %>
					<% }); %>
				</div>
			</div>
		</div>
	</body>
</html>